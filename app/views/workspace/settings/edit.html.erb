<div class="flex flex-col gap-y-8">
  <div class="flex flex-row justify-between items-center border-b border-gray-100 py-5">
    <span class="font-medium text-gray-600 text-lg"><%= t("common.organization_settings") %></span>
  </div>
  <%= form_with url: workspace_settings_edit_path, method: :patch, scope: :organization do |form| %>
    <%= render PhlexUI::Table.new do %>
      <%= render PhlexUI::Table::Body.new(id: :organization_users, class: "text-base") do %>
        <%= render PhlexUI::Table::Row.new do %>
          <%= render PhlexUI::Table::Cell.new(class: "py-4 font-medium") { t("common.currency") } %>
          <%= render PhlexUI::Table::Cell.new(class: "py-4") do %>
            <%= form.select :currency, Stemplin.config.currencies.keys.map { |code| [currency_title_and_code(code), code] }, { required: true }, class: "border-gray-200 rounded-md" %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <div class="mt-4 pt-4 border-t border-gray-100 flex justify-end gap-x-4">
      <%= render ButtonComponent.new(variant: :outline, path: workspace_settings_path, method: :get ) { t("common.cancel") } %>
      <%= render ButtonComponent.new(type: :submit) { t("common.save") } %>
    </div>
  <% end %>
</div>
