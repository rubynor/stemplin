<% content_for :title, "#{t('common.edit')} #{@organization.name}" %>

<div class="flex flex-col gap-y-8">
  <div class="flex flex-row justify-between items-center border-b border-gray-100 py-5">
    <span class="font-medium text-gray-600 text-lg"><%= t("common.organization_settings") %></span>
  </div>
  <%= form_with url: workspace_settings_path, method: :patch, scope: :organization do |form| %>
    <%= render RubyUI::Table.new do %>
      <%= render RubyUI::TableBody.new(id: :organization_users, class: "text-base") do %>
        <%= render RubyUI::TableRow.new do %>
          <%= render RubyUI::TableCell.new(class: "py-4 font-medium") { t("common.currency") } %>
          <%= render RubyUI::TableCell.new(class: "py-4") do %>
            <%= form.select :currency, for_select(@available_currencies), { required: true }, class: "border-gray-200 rounded-md" %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <div class="mt-4 pt-4 border-t border-gray-100 flex justify-end gap-x-4">
      <%= render ButtonComponent.new(variant: :outline, path: workspace_settings_path, method: :get ) { t("common.cancel") } %>
      <%= render ButtonComponent.new(type: :submit) { t("common.save") } %>
    </div>
  <% end %>
</div>
