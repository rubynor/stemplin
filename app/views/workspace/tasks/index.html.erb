<div class="flex flex-col gap-y-8">
  <div class="flex flex-row justify-between items-center border-b border-gray-100 py-3">
    <div class="flex flex-row items-center gap-x-2">
      <span class="font-medium text-gray-600 text-lg"><%= t("common.tasks") %></span>
      <div class="bg-gray-100 border border-gray-200 w-6 h-6 px-4 flex justify-center items-center rounded-md">
        <span class="text-gray-700 text-xs font-semibold"><%= @pagy.count %></span>
      </div>
    </div>
    <div class="flex flex-row gap-2">
      <%= render ButtonComponent.new(path: new_modal_workspace_tasks_path, method: :post) do %>
        <span class="hidden lg:block mr-2"><%= t("common.new_task") %></span>
        <i class="uc-icon text-xl">&#xe9c7;</i>
      <% end %>
    </div>
  </div>
  <div>
    <%= render PhlexUI::Table.new do %>
      <%= render PhlexUI::Table::Header.new do %>
        <%= render PhlexUI::Table::Row.new do %>
          <%= render PhlexUI::Table::Head.new { t("common.name") } %>
          <%= render PhlexUI::Table::Head.new { t("common.created_on") } %>
          <%= render PhlexUI::Table::Head.new { t("common.actions") } %>
        <% end %>
      <% end %>
      <%= render PhlexUI::Table::Body.new(id: :organization_tasks) do %>
        <%= render partial: "workspace/tasks/task", collection: @tasks %>
      <% end %>
    <% end %>
    <%= render PaginationComponent.new(pagy: @pagy, path: workspace_tasks_path) if @pagy.pages > 1 %>
  </div>
</div>
