<div class="flex flex-col gap-y-8">
  <div class="flex flex-row justify-between items-center border-b border-gray-100 py-3">
    <div class="flex flex-row items-center gap-x-2">
      <span class="font-medium text-gray-600 text-lg"><%=  t("common.team_members") %></span>
      <div class="bg-gray-100 border border-gray-200 w-6 h-6 flex justify-center items-center rounded-md">
        <span class="text-gray-700 text-xs font-semibold"><%= @pagy.count %></span>
      </div>
    </div>
    <div class="flex flex-row gap-2">
      <%= render ButtonComponent.new(path: new_modal_workspace_teams_path, method: :post) do %>
        <span class="hidden lg:block mr-2"><%=  t("common.add_new") %></span>
        <i class="uc-icon text-xl">&#xebaf;</i>
      <% end %>
    </div>
  </div>
  <div>
    <%= render PhlexUI::Table.new do %>
      <%= render PhlexUI::Table::Header.new do %>
        <%= render PhlexUI::Table::Row.new do %>
          <%= render PhlexUI::Table::Head.new { t("common.name") } %>
          <%= render PhlexUI::Table::Head.new { t("common.email") } %>
        <% end %>
      <% end %>
      <%= render PhlexUI::Table::Body.new(id: :organization_users) do %>
        <%= render partial: "workspace/teams/user", collection: @users %>
      <% end %>
    <% end %>
    <%= render PaginationComponent.new(pagy: @pagy, path: workspace_teams_path) if @pagy.pages > 1 %>
  </div>
</div>
