<div class="flex flex-col lg:flex-row print:!flex-row gap-4 lg:gap-8 xl:gap-12 border-b border-gray-100 py-4 divide-x divide-gray-100">
  <% unless selected_elements_names.blank? %>
    <div class="grid grid-cols-2 auto-rows-min gap-2 pl-4 max-w-lg">
      <% selected_elements_names.each do |element, names| %>
        <span><%= I18n.t("organizations.reports_filter.tabs.#{names.length > 1 ? element : element.singularize}") %>:</span>
        <div class="text-primary font-bold">
          <% names.each do |name| %>
            <p><%= name %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="flex flex-row items-start gap-x-2 pl-4">
    <div class="print:hidden"><i class="uc-icon text-2xl text-gray-300">&#xe8bb;</i></div>
    <div class="flex flex-col">
      <h2 class="text-base print:text-sm font-regular"><%= t("common.total_hours") %></h2>
      <span class="font-semibold text-2xl print:text-lg text-primary print:text-gray-900">
        <%= minutes_to_float @summary.total_minutes %>
      </span>
      <div class="flex flex-col lg:flex-row items-start lg:items-center gap-4 lg:gap-8 text-sm mt-4">
        <div class="flex flex-row justify-between items-center gap-x-1">
          <div class="rounded-md w-4 h-4 bg-purple-300 print:hidden"></div>
          <span class="text-gray-500 font-regular"><%= t("common.billable") %></span>
          <span class="text-gray-600 font-semibold"><%= minutes_to_float @summary.total_billable_minutes %></span>
        </div>
        <div class="flex flex-row justify-between items-center gap-x-1">
          <div class="rounded-md w-4 h-4 bg-gray-300 print:hidden"></div>
          <span class="text-gray-500 font-regular"><%= t("common.non_billable") %></span>
          <span class="text-gray-600 font-semibold"><%= minutes_to_float @summary.total_non_billable_minutes %></span>
        </div>
      </div>
    </div>
  </div>
  <div class="flex flex-row items-start gap-x-2 pl-4">
    <div class="print:hidden"><i class="uc-icon text-2xl text-gray-300">&#xea95;</i></div>
    <div class="flex flex-col">
      <h2 class="text-base print:text-sm font-regular"><%= t("common.billable_amount") %></h2>
      <div class="flex flex-row font-semibold items-end gap-x-1">
        <span class=" text-2xl print:text-lg text-primary print:text-gray-900">
          <%= @summary.total_billable_amount_currency %>
        </span>
        <span class="text-gray-400"><%= @currency %></span>
      </div>
    </div>
  </div>
</div>
