<!--<section class="section-container mt-24 lg:mt-32"> Use when using image instead of lotti file in hero_section-->
<section class="section-container -mt-8">
  <div class="flex flex-col py-4 lg:py-8">
    <div class="flex flex-col gap-y-2 text-center max-w-3xl mx-auto">
      <span class="text-new-secondary font-medium text-base">Why use Stemplin?</span>
      <span class="text-3xl font-semibold text-new-primary">Simple, Quick, Affordable</span>
      <span class="text-lg text-new-secondary-text mt-2 font-regular">Our platform simplifies work time tracking. Team members log hours easily on various tasks, helping managers oversee projects. When it's time to bill clients, the data is ready to use. It's straightforward for everyone and makes billing hassle-free.</span>
    </div>
    <div class="mt-16">
      <%= render PhlexUI::Tabs.new(default: @services.first[:identifier], class: "grid grid-cols-1 lg:grid-cols-2") do %>
        <%= render PhlexUI::Tabs::List.new(class!: "flex flex-col divide-y divide-gray-200 pr-4 lg:pr-12") do %>
          <% @services.each_with_index do |service, idx| %>
            <%= render partial: "landing_page/services/tab_button", locals: { service: service, count: idx + 1 } %>
          <% end %>
        <% end %>
        <div class="hidden lg:block">
          <% @services.each do |service| %>
            <%= render PhlexUI::Tabs::Content.new(value: service[:identifier]) do %>
              <%= image_tag service[:illustration], class: "rounded-md" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
