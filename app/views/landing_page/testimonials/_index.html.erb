<section class="section-container overflow-y-hidden" id="testimonials">
  <div class="flex flex-col py-4 lg:py-8 border-b border-gray-100">
    <div
      data-aos="fade-up"
      data-aos-offset="200"
      data-aos-delay="100"
      data-aos-duration="1000"
      data-aos-easing="ease-in-out"
      data-aos-once="true"
      class="flex flex-col gap-y-2 text-center max-w-3xl mx-auto capitalize">
      <span class="text-brown font-medium text-base"><%= t("landing_page.testimonials.question") %></span>
      <span class="text-3xl font-semibold text-primary"><%= t("landing_page.testimonials.title") %></span>
      <span class="text-lg text-brown-text mt-2 font-regular"><%= t("landing_page.testimonials.sub_text") %></span>
    </div>
    <%= render partial: "landing_page/testimonials/cards_container" %>
  </div>
</section>
